doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width initial-scale=1 shrink-to-fit=no")
        title= (data ? data["title"] : "")
        link(rel="stylesheet" href="/stylesheets/style.css")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
        link(rel="stylesheet" href="link(rel=\"stylesheet\" href=\"https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css\" integrity=\"sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm\" crossorigin=\"anonymous\")https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
    body
        nav.navbar.navbar-expand-sm.bg-secondary.navbar-dark.fixed-top
            a.navbar-brand(href="/") Tracker
            if locals.user
                ul.navbar-nav
                    li.nav-item
                        a.nav-link(data-toggle="modal" data-target="#addParcel" href="#" tabindex="100") Add parcel
                ul.navbar-nav.ml-auto
                    li.nav-item
                        a.nav-link.disabled Logged in as #{locals.user.username}
                    li.nav-item
                        a.nav-link(href="/auth/logout/" tabindex="200") Logout
            else
                ul.navbar-nav.ml-auto
                    li.nav-item
                        a.nav-link(href="/auth/login/" tabindex="100") Login
                    li.nav-item
                        a.nav-link(href="/auth/register/" tabindex="101") Register
        block content

